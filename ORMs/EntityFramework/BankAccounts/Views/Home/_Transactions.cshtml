@model List<Transaction>

<div class="grid-x align-left">
        <div class="cell shrink">
            <table>
                <thead>
                    <tr>
                        <th>Amount</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr><td colspan="2">"No Transactions in DB"</td></tr>
                    }
                    else
                    {
                        foreach(Transaction t in Model)
                        {
                            <tr>
                                <td>@t.Amount</td>
                                <td>@t.CreatedAt</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>