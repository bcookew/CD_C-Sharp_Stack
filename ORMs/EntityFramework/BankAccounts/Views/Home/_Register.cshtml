@{
    ViewData["Title"] = "Login";
}
@model User

<form asp-action="Register" method="post">
    <h1>Register</h1>
    <div class="grid-x margin-top-3 grid-margin-x align-center">
        <div class="cell shrink">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName"></input>
            <span class="help-text text-alert" asp-validation-for="FirstName"></span>
        </div>
        <div class="cell shrink">
            <label asp-for="LastName"></label>
            <input asp-for="LastName"></input>
            <span class="help-text text-alert" asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="grid-x align-center">
        <div class="cell shrink">
            <label asp-for="Email"></label>
            <input asp-for="Email"></input>
            <span class="help-text text-alert" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="grid-x grid-margin-x align-center">
        <div class="cell shrink">
            <label asp-for="Password"></label>
            <input asp-for="Password"></input>
            <span class="help-text text-alert" asp-validation-for="Password"></span>
        </div>
        <div class="cell shrink">
            <label asp-for="ConfirmPass"></label>
            <input asp-for="ConfirmPass"></input>
            <span class="help-text text-alert" asp-validation-for="ConfirmPass"></span>
        </div>
    </div>
    <div class="grid-x align-center">
        <div class="cell medium-2">
            <input class="button expanded margin-top-3" type="submit" value="Login">
        </div>
    </div>
</form>