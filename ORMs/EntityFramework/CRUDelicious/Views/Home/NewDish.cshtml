@{
    ViewData["Title"] = "New Dish";
}
@model Dish

<form asp-action="AddNew" asp-controller="Home" method="post">
    <div class="grid-x align-justify">
        
        <div class="cell medium-3">
            <label asp-for="Chef"></label>
                <input asp-for="Chef">
                <span class="help-text" asp-validation-for="Chef"></span>
            
            <label asp-for="Name"></label>
                <input asp-for="Name">
                <span class="help-text" asp-validation-for="Name"></span>
            
            <label asp-for="Calories"></label>
                <input asp-for="Calories">
                <span class="help-text" asp-validation-for="Calories"></span>
            
        </div>

        <div class="cell medium-3">
            <label asp-for="Tastiness"></label>
                <select asp-for="Tastiness">
                    @for (int i = 1; i < 6; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span class="help-text" asp-validation-for="Tastiness"></span>
        </div>
        
        <div class="cell medium-3">
            <label asp-for="Description"></label>
                <textarea asp-for="Description"></textarea>
                <span class="help-text" asp-validation-for="Description"></span>
            <input class="button alert" type="submit" value="Add Dish">
        </div>
    </div>
</form>