@{
    ViewData["Title"] = "Dashboard";
}
@model Dashboard

<div class="row">
    <div class="col justify-content-end">
        <form asp-action="NewMessage" asp-controller="Message" method="post">
            <input type="hidden" asp-for="Message.UserId" value="@Model.User.UserId">
            <div class="mb-3">
                <label asp-for="Message.Text" class="form-label">Email address</label>
                <textarea asp-for="Message.Text" class="form-control" id="MessageInput"
                    aria-describedby="MessageErrorText"></textarea>
                <span asp-validation-for="Message.Text" id="MessageErrorText" class="form-text"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
<div class="row">
    @{
        if (Model.Count > 0)
        {
            <div class="col">
                @foreach (Message message in Model)
                {
                    <h3>@message.Author.FirstName @message.Author.LastName - @message.CreatedAt.ToLongDateString()</h3>
                    <p class="pl-3">@message.Text</p>
                }
            </div>
        }
        else
        {
            <div class="col text-center">
                <h2>No Messaqges to Show</h2>
            </div>
        }
    }
</div>
