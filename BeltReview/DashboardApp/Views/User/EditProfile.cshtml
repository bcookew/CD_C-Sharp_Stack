@{
    ViewData["Title"] = "Edit Profile";
}
@model UserUpdate

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-title">
                Update your Information
            </div>
            <form asp-controller="User" asp-action="UpdateUserProfile" method="post"></form>
            <input type="hidden" asp-for="Profile.UserId">
            <input type="hidden" asp-for="Profile.UserLevel">
            <div class="form-floating">
                <input asp-for="Profile.Email" type="text" class="form-control">
                <label asp-for="Profile.Email" class="form-label"></label>
                <span class="form-text text-danger"asp-validation-for="Profile.Email"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Profile.FirstName" type="text" class="form-control">
                <label asp-for="Profile.FirstName" class="form-label"></label>
                <span class="form-text text-danger"asp-validation-for="Profile.FirstName"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Profile.LastName" type="text" class="form-control">
                <label asp-for="Profile.LastName" class="form-label"></label>
                <span class="form-text text-danger"asp-validation-for="Profile.LastName"></span>
            </div>
            <input class="btn btn-success" type="submit" value="Save">
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-title">
                Update your Password
            </div>
            <form asp-controller="User" asp-action="UpdateUserPassword" method="post"></form>
            <input type="hidden" asp-for="Password.UserId">
            <div class="form-floating">
                <input asp-for="Password.Password" type="text" class="form-control">
                <label asp-for="Password.Password" class="form-label"></label>
                <span class="form-text text-danger"asp-validation-for="Password.Password"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password.ConfirmPass" type="text" class="form-control">
                <label asp-for="Password.ConfirmPass" class="form-label"></label>
                <span class="form-text text-danger"asp-validation-for="Password.ConfirmPass"></span>
            </div>
            <input class="btn btn-success" type="submit" value="Update Password">
        </div>
    </div>
</div>
<div class="row">
        <div class="card">
            <div class="card-title">
                Update your Description
            </div>
            <form asp-controller="User" asp-action="UpdateUserDescription" method="post"></form>
            <input type="hidden" asp-for="Description.UserId">
            <div class="form-floating">
                <input asp-for="Description.Description" type="text" class="form-control">
                <label asp-for="Description.Description" class="form-label"></label>
                <span class="form-text text-danger"asp-validation-for="Description.Description"></span>
            </div>
            <input class="btn btn-success" type="submit" value="Save">
        </div>

</div>